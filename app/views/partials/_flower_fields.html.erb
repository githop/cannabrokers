<%= form_for @flower do |f| %>
<p>
	<%=f.label :strain %>
	<%=f.text_field :strain %>
</p>

<p>
	<%= f.label :merchants %>
	<%= f.collection_select :merchants, Merchant.all, :id, :name, {include_blank: true} %>
</p>

<p>
	<%= f.label :kind %>
	<%= f.select :kind, Flower.all.collect {|flower| flower.kind}.uniq %>
</p>

<p>
	<%= f.label :description %>
	<%= f.text_area :description%>
</p>

<p>
	<%= f.label :"Quantity / Price"%>
	<%= f.text_field :"quantity_price"%>
</p>

<%= f.submit class:"button" %>

<% end %>