<%= form_for @equipment do |f| %>
<% if @equipment.errors.any? %>
		<div id="error_explanation">
			<h2><%=pluralize(@equipment.errors.count, "error")%> prevented this flower from being saved:</h2>
			<ul>
				<% @equipment.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
<p>
	<%=f.label :item %>
	<%=f.text_field :item %>
</p>

<p>
	<%= f.label :merchant %>
	<%= f.collection_select :merchant, Merchant.all, :id, :name, {include_blank: true} %>
</p>

<p>
	<%= f.label :kind %>
	<%= f.select :kind, Equipment.all.collect {|flower| flower.kind}.uniq %>
</p>

<p>
	<%= f.label :description %>
	<%= f.text_area :description%>
</p>

<p>
	<%= f.label :price%>
	<%= f.text_field :price%>
</p>

<%= f.submit class:"button" %>

<% end %>