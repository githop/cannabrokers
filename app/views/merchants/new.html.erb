<div class="row">
	<div class="large-11 large-offset-1 columns">
		<h3>New Merchant</h3>

		<%=form_for @merchant do |f| %>
			<p>
				<%=f.label :name %>
				<%=f.text_field :name %>
			</p>

			<p>
				<%=f.label :description %>
				<%=f.text_area :description %>
			</p>

			<p>
				<%=f.label :phone %>
				<%=f.phone_field :phone %>
			</p>

			<p>
				<%=f.label :premium_merchant? %>
				<%=f.check_box :premium %>
			</p>

			<p>
				<%=f.submit class: "button"%>
			</p>
		<% end %>
	</div>
</div>