<div class="row">
	<div class="large-10 large-offset-2 columns">
		<h3>Concentrate Companies</h3>
		<table>
			<thead>
				<tr>
					<th>Company</th>
					<th>description</th>
					<th>Phone #</th>
				</tr>
			</thead>
			<tbody>
				<% @merchants.each do |merchant| %>
				<tr>
					<td><%=link_to(merchant.name, merchant_concentrates_path(merchant))%>
						<%if merchant.premium %>
					<span class="label success radius">premium</span>
					<%end%>
					</td>
					<td><%=merchant.description[0..40]%>...</td>
					<td><%=merchant.phone%></td>
				</tr>
				<%end%>
			</tbody>
		</table>
		<%= render 'partials/mantis_ad_network' %>
	</div>
</div>
